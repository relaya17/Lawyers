{
    "name": "contractlab-pro",
    "version": "1.0.0",
    "description": "ContractLab Pro - פלטפורמה מתקדמת לניהול חוזים ולמידה משפטית",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite --host --port 5174",
        "build": "pnpm exec tsc --noEmit && vite build",
        "build:analyze": "vite build --mode analyze",
        "build:netlify": "pnpm exec tsc --noEmit && vite build",
        "preview": "vite preview --host",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:e2e": "playwright test",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 1000",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "type-check": "pnpm exec tsc --noEmit",
        "clean": "rimraf dist node_modules/.vite .vite",
        "clean:all": "rimraf dist node_modules/.vite .vite node_modules pnpm-lock.yaml",
        "deps:check": "pnpm outdated",
        "deps:update": "pnpm update --latest",
        "deps:audit": "pnpm audit",
        "security:audit": "pnpm audit --audit-level moderate",
        "security:fix": "pnpm audit --fix",
        "code:quality": "npm run lint && npm run type-check",
        "code:fix": "npm run lint:fix && npm run type-check",
        "performance:analyze": "npm run build:analyze",
        "performance:budget": "npm run build && npm run build:analyze",
        "lighthouse:mobile": "lighthouse http://localhost:5174 --view --output=html --output-path=./lighthouse-report.html --chrome-flags='--headless' --only-categories=performance,accessibility,best-practices,seo",
        "lighthouse:desktop": "lighthouse http://localhost:5174 --view --output=html --output-path=./lighthouse-desktop-report.html --chrome-flags='--headless' --only-categories=performance,accessibility,best-practices,seo",
        "test:performance": "npm run build && npm run lighthouse:mobile",
        "prettier:check": "prettier --check .",
        "cspell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "test:a11y": "playwright test --grep accessibility",
        "test:mobile": "playwright test --grep mobile",
        "test:pwa": "playwright test --grep pwa",
        "test:coverage": "vitest --coverage",
        "test:watch": "vitest --watch",
        "test:ci": "vitest run --coverage --reporter=verbose",
        "pre-commit": "npm run lint:fix && npm run type-check && npm run test:ci",
        "post-commit": "npm run deps:audit",
        "health:check": "npm run deps:check && npm run security:audit && npm run code:quality",
        "auto:fix": "npm run lint:fix && npm run security:fix && npm run deps:update",
        "shared:build": "cd src/shared && npm run build",
        "shared:dev": "cd src/shared && npm run dev",
        "shared:install": "cd src/shared && npm install",
        "postinstall": "echo 'Build dependencies installed successfully'",
        "cache:clear": "rm -rf node_modules/.cache .vite dist",
        "cache:clean": "pnpm store prune && pnpm cache clean",
        "build:clean": "pnpm cache:clear && pnpm run build:netlify"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@hookform/resolvers": "^3.3.2",
        "@mui/icons-material": "^5.18.0",
        "@mui/lab": "5.0.0-alpha.160",
        "@mui/material": "^5.18.0",
        "@mui/system": "^7.3.1",
        "@mui/x-date-pickers": "^6.20.2",
        "@myorg/shared": "file:src/shared",
        "@reduxjs/toolkit": "^1.9.7",
        "@tanstack/react-query": "^5.8.4",
        "@tanstack/react-query-devtools": "^5.8.4",
        "axios": "^1.6.2",
        "date-fns": "^2.30.0",
        "date-fns-tz": "^2.0.0",
        "framer-motion": "^10.16.5",
        "html2canvas": "^1.4.1",
        "i18next": "^23.7.6",
        "i18next-browser-languagedetector": "^7.2.0",
        "jspdf": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.3",
        "react-error-boundary": "^4.0.11",
        "react-helmet-async": "^2.0.4",
        "react-hook-form": "^7.48.2",
        "react-hot-toast": "^2.4.1",
        "react-i18next": "^13.5.0",
        "react-intersection-observer": "^9.5.3",
        "react-markdown": "^9.0.1",
        "react-pdf": "^10.1.0",
        "react-redux": "^8.1.3",
        "react-router-dom": "^6.20.1",
        "react-scripts": "^5.0.1",
        "recharts": "^3.1.2",
        "rehype-highlight": "^7.0.0",
        "remark-gfm": "^4.0.0",
        "zod": "^3.22.4",
        "zustand": "^5.0.7"
    },
    "devDependencies": {
        "@emotion/cache": "^11.14.0",
        "@playwright/test": "^1.40.0",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.5.1",
        "@types/node": "^24.3.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@types/stylis": "^4.2.7",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitejs/plugin-react": "^4.1.1",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "husky": "^8.0.3",
        "jsdom": "^23.0.1",
        "lighthouse": "^11.6.0",
        "lint-staged": "^15.2.0",
        "npm-check-updates": "^16.14.0",
        "prettier": "^3.1.0",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "rimraf": "^6.0.1",
        "rollup-plugin-visualizer": "^6.0.3",
        "snyk": "^1.1260.0",
        "sonarqube-scanner": "^3.3.0",
        "stylis": "^4.3.0",
        "stylis-plugin-rtl": "^2.1.1",
        "terser": "^5.43.1",
        "typescript": "^5.5.0",
        "vite": "^5.0.0",
        "vite-plugin-imagemin": "^0.6.1",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^1.0.0",
        "webpack-bundle-analyzer": "^4.10.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    }
}